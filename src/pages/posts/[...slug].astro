---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { type CollectionPosts } from '@/types'
import { getPosts } from '@/utils/posts'
import { getDate } from '@/utils/date'

export async function getStaticPaths() {
  const posts = await getPosts()
  return posts.map((post) => {
    return {
      params: { slug: post.slug },
      props: {
        post,
      },
    }
  })
}

type Props = { post: CollectionPosts }

const { post } = Astro.props
const { title, image, description, date, duration, tag } = post.data

const { Content } = await post.render()
---

<BaseLayout title={title} description={description} pageType="article">
  <article class="prose">
    <header class="mb-10">
      <h1 class="!mb-4">{title}</h1>
      <div class="flex items-center gap-3 text-sm text-secondary not-prose">
        {date && <time datetime={getDate(date)}>{date}</time>}
        {duration && (
          <>
            <span class="text-muted">Â·</span>
            <span>{duration}</span>
          </>
        )}
        {tag && (
          <span class="px-2 py-0.5 bg-hex-5f9b65/10 dark:bg-hex-7ab882/10 text-accent rounded text-xs font-500">
            {tag}
          </span>
        )}
      </div>
    </header>
    {
      image && (
        <figure class="!mt-0">
          <img
            width="640"
            height="360"
            src={image.src}
            alt={image.alt || ''}
            loading="lazy"
            decoding="async"
          />
        </figure>
      )
    }
    <Content />
  </article>
</BaseLayout>
